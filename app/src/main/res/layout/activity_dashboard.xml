<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    tools:context=".Dashboard">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:layout_marginLeft="10dp"
        android:id="@+id/calorieText"
        android:text="Calories for the Day"
        android:textSize="24dp"
        android:textStyle="normal"
        android:textColor="@android:color/black"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearlayout"
        android:orientation="horizontal"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="130dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/goalText"
            android:text="Goal"
            android:textSize="18dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/foodText"
            android:layout_marginLeft="40dp"
            android:text="Food"
            android:textSize="18dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="60dp"
            android:id="@+id/stepText"
            android:text="Steps"
            android:textSize="18dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/leftText"
            android:layout_marginLeft="60dp"
            android:text="Left"
            android:textSize="18dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearlayout1"
        android:orientation="horizontal"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="160dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/goalValue"
            android:textSize="14dp"
            android:textColor="@android:color/black"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/minusText"
            android:layout_marginLeft="10dp"
            android:text="-"
            android:textSize="14dp"
            android:textColor="@android:color/black"/>

        <TextView
            android:layout_width="45dp"
            android:layout_height="wrap_content"
            android:id="@+id/foodValue"
            android:layout_marginLeft="20dp"
            android:textSize="14dp"
            android:textColor="@android:color/black"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/plusText"
            android:layout_marginLeft="20dp"
            android:text="+"
            android:textSize="14dp"
            android:textColor="@android:color/black"/>

        <TextView
            android:layout_width="45dp"
            android:layout_height="wrap_content"
            android:id="@+id/stepValue"
            android:layout_marginLeft="25dp"
            android:textSize="14dp"
            android:textColor="@android:color/black"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/equalText"
            android:layout_marginLeft="25dp"
            android:text="="
            android:textSize="14dp"
            android:textColor="@android:color/black"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/leftValue"
            android:layout_marginLeft="20dp"
            android:textSize="14dp"
            android:textColor="@android:color/black"/>

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableTop="@drawable/green_line"
        android:layout_marginTop="200dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayoutTest1"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="270dp"
        android:orientation="horizontal">

        <Button
            android:layout_width="150dp"
            android:layout_height="130dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Widget.ActionBar.Title.Inverse"
            android:background= "@drawable/orange_button"
            android:text="Steps"
            android:id="@+id/steps"
            android:onClick="onClickSteps"
            android:drawablePadding="-10dp"
            android:drawableTop="@drawable/steps"
            android:textSize="24sp"/>

        <Button
            android:layout_width="150dp"
            android:layout_height="130dp"
            android:layout_marginLeft="20dp"
            android:text="Food"
            android:id="@+id/food"
            android:textAppearance="@style/TextAppearance.AppCompat.Widget.ActionBar.Title.Inverse"
            android:background="@drawable/blue_button"
            android:onClick="onClickFood"
            android:drawablePadding="-10dp"
            android:drawableTop="@drawable/food"
            android:textSize="24sp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayoutTest2"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="420dp"
        android:layout_below="@+id/linearLayoutTest1"
        android:orientation="horizontal">

        <Button
            android:layout_width="150dp"
            android:layout_height="130dp"
            android:text="Articles"
            android:id="@+id/usefulArticles"
            android:textAppearance="@style/TextAppearance.AppCompat.Widget.ActionBar.Title.Inverse"
            android:drawableTop="@drawable/articles2"
            android:background="@drawable/green_button"
            android:drawablePadding="-10dp"
            android:onClick="onClickArticle"
            android:layout_below="@+id/button"
            android:textSize="24sp"/>

        <Button
            android:layout_width="150dp"
            android:layout_height="130dp"
            android:text="Report"
            android:textAppearance="@style/TextAppearance.AppCompat.Widget.ActionBar.Title.Inverse"
            android:id="@+id/report"
            android:onClick="onClickProgress"
            android:background="@drawable/yellow_button"
            android:drawableTop="@drawable/report"
            android:layout_marginLeft="20dp"
            android:drawablePadding="-10dp"
            android:textSize="24sp"/>

    </LinearLayout>
    <include
        layout="@layout/app_bar_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <android.support.design.widget.NavigationView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/nav_view"
        android:layout_gravity="start"
        android:fitsSystemWindows="true"
        app:itemIconTint="@android:color/black"
        app:menu="@menu/drawer_menu">

    </android.support.design.widget.NavigationView>

</android.support.v4.widget.DrawerLayout>